{
	"manifest_version": 2,
	"name": "Take screenshot",
	"version": "1.0",
	"description": "Take screenshot",
	"icons": {
		"16": "icons/lens_16.png",
		"48": "icons/lens_48.png",
		"128": "icons/lens_128.png"
	},
	"background": {
		"scripts": [
			"javascript/background.js"
		]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["javascript/content.js"]
		}
	],
	"permissions": [
        "activeTab",
		"tabs"
	],
	"browser_action": {
		"default_icon": "icons/lens_16.png",
		"default_popup": "popup.html"
	}
}
